        <p>No results available.</p>

        <a href="<?=$f3->alias('admin_audit_list') ?>" class="waves-effect waves-light btn btn-medium blue">List all entries</a>

    <?php else: ?>

        <div class="center-align">
            <?=\View::instance()->render('cms/paginator.phtml'); ?>
        </div>

        <div class="row">
            <div class="col s12">

                <table class="responsive-table">
                    <tr>
                        <?php foreach ($listFields as $field): ?>
                            <th data-field="<?=$field ?>"><?=$field ?></th>
                        <?php endforeach ?>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                        <?php foreach ($results['objects'] as $k => $o):  //unset($results['objects'][$k]); ?>
                            <tr>
                                <?php foreach ($listFields as $field):
                                        $v = $o[$field];
                                        $link = '';
                                    switch ($field) {
                                       case 'created':
                                            $v = substr(date('r', strtotime($v)), 0, -6);
                                            $class = 'text-small';
                                            break;
                                        case 'uuid':
                                        case 'users_uuid':
                                            $class = "text-tiny";
                                            if ($field == 'users_uuid') {
                                                $link = $uh->internal('@admin_users_search', [
                                                    'search' => $o['users_uuid'],
                                                    'search_fields' => 'uuid',
                                                    'type' => 'exact',
                                                ]);
                                            }
                                            break;
                                        default:
                                            $class = '';
                                    }
                                    $class = empty($class) ? '' : ' class="' . $class . '"';
                                    ?>
                                    <td>
                                        <p<?=$class ?>>
                                        <?php if (empty($link)): ?>
                                            <?=$v ?>
                                        <?php else: ?>
                                            <a href="<?=$link ?>"><?=$v ?></a>
                                        <?php endif ?>
                                        </p>
                                    </td>
                            <?php endforeach ?>
                                <td>
                                    <a href="<?=$f3->alias('admin_audit_view') . '?uuid=' . $o['uuid'] ?>" class="waves-effect waves-light btn btn-small blue">View</a>
                                </td>
                            </tr>
                        <?php endforeach ?>
                    </tbody>
                </table>

            </div>
        </div>

        <div>
    <?=\View::instance()->render('cms/paginator.phtml'); ?>
        </div>

        <p>Showing <?=$p['results_from'] ?> - <?=$p['results_to'] ?> out of <?=$p['results'] ?> results.</p>

<?php endif ?>

